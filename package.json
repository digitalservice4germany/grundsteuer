{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && tsc --noEmit && remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./public/tailwind.css",
    "clean": "rm -rf build public/build app/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"copy-env-cli && node -r dotenv-safe/config node_modules/.bin/remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./public/tailwind.css --watch",
    "lint:check": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "format:fix": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "check": "npm install && npm run build && npm run style:check && npm test",
    "pre-commit": "npm install && npm run build && lint-staged",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "prepare": "is-ci || husky install",
    "test": "jest"
  },
  "dependencies": {
    "@digitalservice4germany/digital-service-library": "^0.0.19",
    "@prisma/client": "^3.8.1",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@tailwindcss/typography": "^0.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@remix-run/dev": "^1.1.3",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "concurrently": "^7.0.0",
    "copy-env-cli": "^1.0.0",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "fishery": "^2.1.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "prettier": "2.5.1",
    "prisma": "^3.8.1",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "volta": {
    "node": "16.13.2",
    "npm": "8.4.0"
  }
}
