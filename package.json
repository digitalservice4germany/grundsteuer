{
  "private": true,
  "name": "grundsteuer",
  "description": "",
  "license": "",
  "sideEffects": false,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "audit:decrypt": "ts-node -r tsconfig-paths/register audit-decrypt.server.ts",
    "audit:export": "ts-node -r tsconfig-paths/register audit-export.server.ts",
    "build": " tsc --noEmit && run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --bundle --platform=node --format=cjs ./server.ts --outdir=build",
    "clean": "rm -rf build public/build public/tailwind.css",
    "db:migrate": "prisma migrate deploy",
    "dev": "copy-env-cli && run-p dev:*",
    "dev:node": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register ./server.ts --watch ./server.ts",
    "dev:remix": "remix watch",
    "dev:css": "npm run generate:css -- --watch",
    "generate:css": "tailwindcss -i ./app/styles/tailwind.css -o ./public/tailwind.css",
    "lint:check": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "format:fix": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "style:check": "run-s format:check lint:check",
    "style:fix": "run-s format:fix lint:fix",
    "check": "npm install && run-s build style:check test",
    "pre-commit": "npm install && run-s build test && lint-staged",
    "prepare": "is-ci || husky install",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "test": "jest --testPathPattern=/app/",
    "test:e2e": "start-server-and-test start http://localhost:3000 cypress",
    "test:integration": "cross-env INTEGRATION_TEST=1 jest --testPathPattern=/test/integration/ --runInBand",
    "cypress": "cypress run --browser chrome --headless",
    "cypress:open": "cypress open",
    "docker:up": "docker-compose -f ./docker-compose-test.yml -p grundsteuer-test up -d",
    "docker:down": "docker-compose -f ./docker-compose-test.yml -p grundsteuer-test down"
  },
  "dependencies": {
    "@prisma/client": "^3.13.0",
    "@radix-ui/react-accordion": "^0.1.6",
    "@remix-run/express": "^1.4.3",
    "@remix-run/node": "^1.4.1",
    "@remix-run/react": "^1.4.3",
    "@tailwindcss/typography": "^0.5.2",
    "@xstate/graph": "^1.4.2",
    "@xstate/inspect": "^0.7.0",
    "@xstate/react": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.3.1",
    "compression": "^1.7.4",
    "copy-to-clipboard": "^3.3.1",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "helmet": "^5.0.2",
    "i18next": "^21.8.3",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-backend": "^1.4.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.9",
    "react-images-viewer": "^1.7.1",
    "react-imask": "^6.4.2",
    "remix-auth": "^3.2.1",
    "remix-auth-form": "^1.1.1",
    "remix-i18next": "^4.0.0",
    "tiny-invariant": "^1.2.0",
    "tsconfig-paths": "^4.0.0",
    "validator": "^13.7.0",
    "xstate": "^4.31.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/lru-cache": "^7.6.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.32",
    "@types/node-cron": "^3.0.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.21.0",
    "copy-env-cli": "^1.0.0",
    "cypress": "^9.6.0",
    "esbuild": "^0.14.36",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "fishery": "^2.2.2",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.6",
    "lint-staged": "^12.3.8",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "prisma": "^3.14.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14"
  },
  "volta": {
    "node": "16.13.2",
    "npm": "8.4.0"
  }
}
