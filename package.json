{
  "private": true,
  "name": "grundsteuer",
  "description": "",
  "license": "",
  "sideEffects": false,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "audit:decrypt": "ts-node -r tsconfig-paths/register audit-decrypt.server.ts",
    "audit:export": "ts-node -r tsconfig-paths/register audit-export.server.ts",
    "build": "tsc --noEmit && run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build --sourcemap",
    "build:cron": "esbuild --bundle --platform=node --format=cjs ./start-cron.ts --outdir=build",
    "clean": "rm -rf build public/build public/tailwind.css",
    "db:migrate": "prisma migrate deploy",
    "dev": "copy-env-cli && run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development node --inspect ./server.js",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "generate:css": "tailwindcss -i ./app/styles/tailwind.css -o ./public/tailwind.css",
    "lint:check": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "format:fix": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "style:check": "run-s format:check lint:check",
    "style:fix": "run-s format:fix lint:fix",
    "check": "npm install && run-s build style:check test",
    "pre-commit": "npm install && run-s build test && lint-staged",
    "prepare": "is-ci || husky install",
    "postinstall": "patch-package",
    "start": "cross-env NODE_ENV=production node --max-http-header-size=65536 ./server.js",
    "test": "cross-env NODE_OPTIONS=--no-warnings jest --testPathPattern=/app/",
    "test:e2e": "cross-env SKIP_AUTH=true start-server-and-test start http://localhost:3000 cypress",
    "test:integration": "cross-env INTEGRATION_TEST=1 jest --testPathPattern=/test/integration/ --runInBand",
    "cypress": "cypress run --browser chrome --headless",
    "cypress:open": "cypress open",
    "docker:up": "docker-compose -f ./docker-compose-test.yml -p grundsteuer-test up -d",
    "docker:down": "docker-compose -f ./docker-compose-test.yml -p grundsteuer-test down"
  },
  "dependencies": {
    "@node-saml/node-saml": "node-saml/node-saml#d8bf6b55a70044d98eb767123bcf717808d7369d",
    "@prisma/client": "^4.1.1",
    "@remix-run/express": "^1.6.7",
    "@remix-run/node": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "@sentry/remix": "^7.9.0",
    "@tailwindcss/typography": "^0.5.4",
    "@xstate/graph": "^1.4.2",
    "@xstate/inspect": "^0.7.0",
    "@xstate/react": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.3.1",
    "compression": "^1.7.4",
    "copy-to-clipboard": "^3.3.2",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "i18next": "^21.8.16",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-backend": "^1.4.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.1",
    "plausible-tracker": "^0.3.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.18.3",
    "react-images-viewer": "^1.7.1",
    "react-imask": "^6.4.2",
    "remix-auth": "^3.2.2",
    "remix-auth-email-link": "^1.3.1",
    "remix-auth-form": "^1.1.2",
    "remix-i18next": "^4.1.1",
    "sib-api-v3-sdk": "^8.4.0",
    "tiny-invariant": "^1.2.0",
    "tsconfig-paths": "^4.0.0",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "xstate": "^4.32.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@testing-library/dom": "^8.16.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/lru-cache": "^7.10.10",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.4",
    "@types/node-cron": "^3.0.2",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.5",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "copy-env-cli": "^1.0.0",
    "cypress": "^10.4.0",
    "esbuild": "^0.14.53",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "fishery": "^2.2.2",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.7",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "2.7.1",
    "prisma": "^4.1.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.7",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14"
  },
  "volta": {
    "node": "16.16.0",
    "npm": "8.11.0"
  }
}
