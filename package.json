{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && tsc --noEmit && cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./public/tailwind.css",
    "clean": "rm -rf build public/build app/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"copy-env-cli && cross-env NODE_ENV=development node -r dotenv-safe/config node_modules/.bin/remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./public/tailwind.css --watch",
    "lint:check": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "format:fix": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "check": "npm install && npm run build && npm run style:check && npm test",
    "pre-commit": "npm install && npm run build && lint-staged",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "prepare": "is-ci || husky install",
    "test": "jest",
    "cypress": "cypress run --browser chrome --headless",
    "test:e2e": "start-server-and-test start http://localhost:3000 cypress"
  },
  "dependencies": {
    "@digitalservice4germany/digital-service-library": "^0.0.19",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "@tailwindcss/typography": "^0.5.2",
    "@xstate/graph": "^1.4.2",
    "@xstate/inspect": "^0.6.3",
    "@xstate/react": "^2.0.1",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "i18next": "^21.6.13",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.5",
    "remix": "^1.2.3",
    "remix-i18next": "^3.0.0",
    "tiny-invariant": "^1.2.0",
    "xstate": "^4.30.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@remix-run/dev": "^1.2.3",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.179",
    "@types/lru-cache": "^7.4.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "concurrently": "^7.0.0",
    "copy-env-cli": "^1.0.0",
    "cypress": "^9.5.1",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "fishery": "^2.2.2",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "2.5.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14"
  },
  "volta": {
    "node": "16.13.2",
    "npm": "8.4.0"
  }
}
