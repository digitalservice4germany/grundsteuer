{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "test/e2e/**/*.ts",
    "cypress",
    "cypress.config.ts",
    "useid-eservice-sdk/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "test/*": ["test/*"],
      "testUtil/*": ["private/jest/util/*"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  }
}
